    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "allowJs": true,
    "sourceRoot": "src",
    "rootDir": "src",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ]
}